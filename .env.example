# ============================================================================
# TWOINE - Environment Configuration
# ============================================================================

# Node Environment
NODE_ENV=production

# API Server
PORT=3000
TWOINE_VERSION=1.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/twoine
MONGODB_HOST=localhost
MONGODB_PORT=27017

# MongoDB Admin Credentials (for database management)
MONGODB_ADMIN_USER=twoine_admin
MONGODB_ADMIN_PASSWORD=change_this_secure_password
MONGODB_ADMIN_DB=admin

# MySQL/MariaDB Configuration (for database management)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_ADMIN_USER=root
MYSQL_ADMIN_PASSWORD=change_this_secure_password

# PostgreSQL Configuration (for database management)
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_ADMIN_USER=postgres
POSTGRESQL_ADMIN_PASSWORD=change_this_secure_password

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string_minimum_32_characters
JWT_REFRESH_SECRET=change_this_to_another_secure_random_string_minimum_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_MAX=1000

# SFTP Configuration
SFTP_HOST=localhost
SFTP_PORT=22

# File Upload
MAX_UPLOAD_SIZE=100MB

# Logging
LOG_LEVEL=info
LOG_DIR=/var/log/twoine

# Paths
SITES_ROOT=/var/www/twoine
TEMP_DIR=/opt/twoine/tmp

# System
SYSTEMD_SERVICES_PREFIX=twoine-site-

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASSWORD=
SMTP_FROM=Twoine <noreply@example.com>

# Monitoring
METRICS_RETENTION_DAYS=30
